<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/horizontalLayout">

            <ImageView
                android:id="@+id/covarIv"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorPrimaryDark">

            </ImageView>

            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="156dp"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:elevation="10dp"
                android:background="@drawable/circle_background"
                android:id="@+id/circularHLayout"
                android:layout_marginTop="90dp">



                <androidx.cardview.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    app:cardCornerRadius="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <com.jackandphantom.circularimageview.RoundedImage
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </RelativeLayout>
         </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="84dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/circle_background"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/ic_edit_black_24dp"/>

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="243dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        //name cardview

        <androidx.cardview.widget.CardView
            android:id="@+id/nameCv"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:orientation="horizontal"
            app:contentPadding="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/setName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kapadokia"
                    android:textSize="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //about cardview

        <androidx.cardview.widget.CardView
            android:id="@+id/aboutCv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameCv"
            android:layout_marginTop="5dp"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="20dp"
            app:contentPadding="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_info_outline_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aboutTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/setAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Industrious nigger"
                    android:textSize="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //phone section

        <androidx.cardview.widget.CardView
            android:id="@+id/phoneCv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboutCv"
            android:layout_marginTop="5dp"
            android:elevation="6dp"
            android:orientation="horizontal"
            android:padding="20dp"
            app:contentPadding="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center|left"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_call_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/setPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+254 743 378884"
                    android:textSize="14dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!--    floating Action Button-->



</RelativeLayout>